<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_config_inherit_pos_discount" model="ir.ui.view">
        <field name="name">pos.config.inherit.pos.discount</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"></field>
        <field name="arch" type="xml">
            <div id="product_prices" position="after">
                <div class="col-12 col-lg-6 colo_setting_box" id="discount_passcode" groups="point_of_sale.group_pos_manager">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Discount Password</span>
                        <div class="content-group mt16">
                            <field name="discount_passcode" groups="point_of_sale.group_pos_manager" type="password"/>

                        </div>
                    </div>

                </div>

            </div>
        </field>
    </record>
</odoo>