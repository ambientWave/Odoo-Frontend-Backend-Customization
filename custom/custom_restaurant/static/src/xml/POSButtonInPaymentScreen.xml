<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!-- we are modifying the original paymentScreen by using the extension inheritance (there's also primary) -->
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
            <div>
                <div id="my_button" class="button" t-on-click="onClick">
                    <i class="fa fa-spinner fa-spin"></i>My Button

                </div>
            </div>

        </xpath>

    </t>

</templates>